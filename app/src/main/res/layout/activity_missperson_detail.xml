<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/useless"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20px"
            android:src="@drawable/backarrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10px"
            android:gravity="center_vertical"
            android:text="详细信息"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!--轮播图-->
    <com.youth.banner.Banner xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_below="@id/ll_search"
        android:layout_marginTop="50px" />

    <!--文字信息-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10px"
        android:orientation="vertical">

        <!--姓名-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="300px"
                android:layout_height="100px"
                android:gravity="center_vertical"
                android:text="姓名:" />

            <TextView
                android:id="@+id/tv_missperson_name"
                android:layout_width="300px"
                android:layout_height="100px"
                android:layout_toRightOf="@id/tv_name"
                android:gravity="center_vertical"
                android:text="name:" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:background="#778899" />
        <!--年龄-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="300px"
                android:layout_height="100px"
                android:gravity="center_vertical"
                android:text="年龄:" />

            <TextView
                android:id="@+id/tv_missperson_age"
                android:layout_width="300px"
                android:layout_height="100px"
                android:layout_toRightOf="@id/tv_age"
                android:gravity="center_vertical"
                android:text="age:" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:background="#778899" />
        <!--身高-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_bodyheight"
                android:layout_width="300px"
                android:layout_height="100px"
                android:gravity="center_vertical"
                android:text="身高:" />

            <TextView
                android:id="@+id/tv_missperson_bodyhight"
                android:layout_width="300px"
                android:layout_height="100px"
                android:layout_toRightOf="@id/tv_bodyheight"
                android:gravity="center_vertical"
                android:text="bodyheight:" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:background="#778899" />
        <!--特征-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_feature"
                android:layout_width="300px"
                android:layout_height="100px"
                android:gravity="center_vertical"
                android:text="特征:" />

            <TextView
                android:id="@+id/tv_missperson_feature"
                android:layout_width="300px"
                android:layout_height="100px"
                android:layout_toRightOf="@id/tv_feature"
                android:gravity="center_vertical"
                android:text="feature:" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:background="#778899" />
        <!--家庭住址-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="300px"
                android:layout_height="100px"
                android:gravity="center_vertical"
                android:text="家庭住址:" />

            <TextView
                android:id="@+id/tv_missperson_address"
                android:layout_width="300px"
                android:layout_height="100px"
                android:layout_toRightOf="@id/tv_address"
                android:gravity="center_vertical"
                android:text="address:" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:background="#778899" />
        <!--衣着特征-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_dress"
                android:layout_width="300px"
                android:layout_height="100px"
                android:gravity="center_vertical"
                android:text="衣着:" />

            <TextView
                android:id="@+id/tv_missperson_dress"
                android:layout_width="300px"
                android:layout_height="100px"
                android:layout_toRightOf="@id/tv_dress"
                android:gravity="center_vertical"
                android:text="dress:" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:background="#778899" />
        <!--联系方式-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="300px"
                android:layout_height="100px"
                android:gravity="center_vertical"
                android:text="联系方式:" />

            <TextView
                android:id="@+id/tv_missperson_contact"
                android:layout_width="300px"
                android:layout_height="100px"
                android:layout_toRightOf="@id/tv_contact"
                android:gravity="center_vertical"
                android:text="contact:" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:background="#778899" />
        <!--救助单位-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="300px"
                android:layout_height="100px"
                android:gravity="center_vertical"
                android:text="救助单位:" />

            <TextView
                android:id="@+id/tv_missperson_unit"
                android:layout_width="300px"
                android:layout_height="100px"
                android:layout_toRightOf="@id/tv_unit"
                android:gravity="center_vertical"
                android:text="unit:" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:background="#778899" />
        <!--发布日期-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_release_date"
                android:layout_width="300px"
                android:layout_height="100px"
                android:gravity="center_vertical"
                android:text="发布日期:" />

            <TextView
                android:id="@+id/tv_missperson_release_date"
                android:layout_width="300px"
                android:layout_height="100px"
                android:layout_toRightOf="@id/tv_release_date"
                android:gravity="center_vertical"
                android:text="release_date:" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
